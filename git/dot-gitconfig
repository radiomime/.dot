    --format='%Cgreen(%cr) %C(cyan dim) <%an> %C(bold white)%d%Creset'
	ll = log --graph --oneline --decorate --all \
    --format='%C(cyan dim) %p %Cred %h %C(white dim) %s %Cgreen(%cr)%C(cyan dim) <%an>%C(bold magenta)%d%Creset'
